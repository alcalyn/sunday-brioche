{% extends "BriocheCoreBundle:Brioche:layout.html.twig" %}

{% block title %}Type de brioche - {{ parent() }}{% endblock %}

{% block metadesc %}Choisissez le type de votre brioche entre Vendéenne et Parisienne.{% endblock %}

{% block body %}
{{ parent() }}

<section class="type">
    <h2 class="text-center">Type de brioche</h2>
    <br />
    <div class="row">
        <div class="col-sm-4 col-sm-offset-2 col-xs-6 col-sm-offset-3">
            <a href="#" class="thumbnail type-vendeene">
                <img src="{{ asset('bundles/briochecore/img/type-vendeenne.jpg') }}" alt="Brioche Vendéenne">
                <h3 class="text-center">Vendéenne</h3>
            </a>
        </div>
        <div class="col-sm-4 col-xs-6">
            <a href="#" class="thumbnail type-parisienne">
                <img src="{{ asset('bundles/briochecore/img/type-parisienne.jpg') }}" alt="Brioche Parisienne">
                <h3 class="text-center">Parisienne</h3>
            </a>
        </div>
    </div>
    <form class="form-type" method="post">
        <input type="hidden" name="type" />
    </form>
</section>
{% endblock %}
