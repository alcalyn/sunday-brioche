{% extends "BriocheCoreBundle::layout.html.twig" %}

{% block body %}
<section class="size">
    <h2 class="text-center">Taille de brioche</h2>
    <br />
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
            <div class="thumbnail">
                <img src="http://dummyimage.com/800x200/ababab/515151.jpg" alt="alt">
                <h3 class="text-center">Vendéene</h3>
                <br />
                <ul class="nav nav-tabs nav-justified" id="size-tab" role="tablist">
                    <li><a href="#taille-125">125</a></li>
                    <li class="active"><a href="#taille-250">250</a></li>
                    <li><a href="#taille-375">375</a></li>
                    <li><a href="#taille-500">500</a></li>
                </ul>
                <div class="padd">
                    <div class="tab-content">
                        <div class="tab-pane" id="taille-125">a</div>
                        <div class="tab-pane active" id="taille-250">
                            <h4>Brioche 250</h4>
                            <p class="lead price">Prix : 8 €</p>
                            <p><b>3</b> personnes</p>
                        </div>
                        <div class="tab-pane" id="taille-375">c</div>
                        <div class="tab-pane" id="taille-500">d</div>
                    </div>
                    <form>
                        <input type="hidden" name="size" value="250" />
                        <div class="text-center">
                            <button class="btn btn-success" role="submit">
                                <span class="glyphicon glyphicon-ok-circle"></span>
                                Valider
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}