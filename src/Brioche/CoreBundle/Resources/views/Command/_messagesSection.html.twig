<section class="thread message">
    {% for message in brioche.messages %}
        <div class="panel">
            <div class="panel-body">
                <p class="lead">{{ message.content|nl2br }}</p>
                <p class="text-right">
                    {% if message.author is constant('Brioche\\CoreBundle\\Entity\\Message::AUTHOR_CLIENT') %}
                        <b>{{ message.brioche.client.fullName }}</b>,
                    {% elseif message.author is constant('Brioche\\CoreBundle\\Entity\\Message::AUTHOR_AUTHOR_BRIOCHE_DU_DIMANCHE') %}
                        <b>Brioche du Dimanche</b>,
                    {% else %}
                        <b>Robot</b>,
                    {% endif %}

                    le <span class="text-capitalize">{{ message.dateCreated|localizeddate('none', 'none', 'fr', null, 'EEEE d MMMM') }}</span>
                    Ã  {{ message.dateCreated|localizeddate('none', 'none', 'fr', null, 'k\'h\'mm') }}
                </p>
            </div>
        </div>
    {% endfor %}
</section>
