        <script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/select2/3.5.0/select2_locale_fr.min.js"></script>

        {% javascripts
            '@BriocheCoreBundle/Resources/public/js/*'
        %}
                <script src="{{ asset_url }}" type="text/javascript"></script>
        {% endjavascripts %}

        {% block extra_js %}{% endblock %}

