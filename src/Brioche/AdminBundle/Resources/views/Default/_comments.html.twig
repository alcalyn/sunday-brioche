<h2>Livre d'or</h2>

<div class="panel panel-default">
    <div class="panel-heading">
        <h4 class="panel-title">
            <a data-toggle="collapse" data-parent="#accordion" href="#comments">
                Messages du livre d'or ({{ comments|length }})
            </a>
        </h4>
    </div>
    <div id="comments" class="panel-collapse collapse in">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Meta</th>
                    <th>Message</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                {% for comment in comments %}
                    <tr class="{{ (comment.note < 2) ? 'danger' : ((comment.note < 4) ? 'warning' : 'success') }} {% if comment.disabled %}disabled{% endif %}">
                        <td>
                            <b>{{ comment.author }}</b>,<br />
                            <small>le {{ comment.dateCreate|date('j/m/y') }}</small><br />
                            <small>à {{ comment.dateCreate|date('H:i') }},</small><br />
                            <b class="lead">{{ comment.note }}</b> / 5
                        </td>
                        <td>{{ comment.content|nl2br }}</td>
                        <td>
                            {% if comment.disabled %}
                                <a href="{{ path('admin_author_comment', {id: comment.id, status: 'enable'}) }}">
                                    <span class="label label-default">Refusé</span>
                                </a>
                            {% else %}
                                <a href="{{ path('admin_author_comment', {id: comment.id, status: 'disable'}) }}">
                                    <span class="label label-success">Visible</span>
                                </a>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
