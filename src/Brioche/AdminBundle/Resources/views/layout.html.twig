<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        
        <title>{% block title %}Brioche du Dimanche Admin{% endblock %}</title>

        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
        <link rel="stylesheet" href="//bootswatch.com/united/bootstrap.min.css">
        <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-glyphicons.css">
        
        {% stylesheets
            'bundles/briochecore/css/*'
            'bundles/briocheadmin/css/*'
            filter='cssrewrite'
        %}
            <link rel="stylesheet" type="text/css" href="{{ asset_url }}" />
        {% endstylesheets %}

        {% block extra_css %}{% endblock %}
    </head>
    <body>
        {% include 'BriocheCoreBundle::_navbar.html.twig' %}

        {% block jumbotron %}
        {% endblock %}

        {% if app.session.flashbag.peekAll|length > 0 %}
            <div class="container alerts">
                <div class="row">
                    <div class="col-sm-10 col-sm-offset-1">
                        {% for type, flashMessages in app.session.flashbag.all() %}
                            {% for flashMessage in flashMessages %}
                                <div class="alert alert-{{ type }} alert-dismissible" role="alert">
                                    <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                                    {{ flashMessage }}
                                </div>
                            {% endfor %}
                        {% endfor %}
                    </div>
                </div>
            </div>
        {% endif %}
        
        <div id="main-container" class="container-fluid">
            {% block body %}
            {% endblock %}
        </div>

        <br /><br />

        <script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
        <script type="text/javascript" src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>

        {% javascripts
            '@BriocheCoreBundle/Resources/public/js/*'
        %}
                <script src="{{ asset_url }}" type="text/javascript"></script>
        {% endjavascripts %}

        {% block extra_js %}{% endblock %}
    </body>
</html>
